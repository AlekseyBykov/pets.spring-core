<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="elementLocator" class="alekseybykov.portfolio.springcore.di.locators.ElementLocator"/>
	<bean id="elementSearchService" class="alekseybykov.portfolio.springcore.di.services.ElementSearchService">
		<constructor-arg ref="elementLocator"/>
	</bean>

	<bean id="beanAWithStringArg" class="alekseybykov.portfolio.springcore.di.constructors.BeanA">
		<constructor-arg value="1"/>
	</bean>

	<bean id="beanAWithIntArg" class="alekseybykov.portfolio.springcore.di.constructors.BeanA">
		<constructor-arg value="1" type="int"/>
	</bean>

	<bean id="beanB" class="alekseybykov.portfolio.springcore.di.constructors.BeanB">
		<constructor-arg value="0" index="1"/>
		<constructor-arg value="1" index="0"/>
	</bean>

</beans>
